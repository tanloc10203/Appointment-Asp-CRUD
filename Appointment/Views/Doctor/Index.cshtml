                    <td>mdo</td>
                    <td>mdo</td>
                    <td>mdo</td>
                    <td>mdo</td>
                    <td>mdo</td>
                    <td>
                        <a asp-controller="Doctor" asp-action="Add" class="btn btn-danger">Delete</a>
